<!-- views/admin-addphoto.ejs -->
<%- include('partials/header', { title: title }) %>

    <section class="admin-addphoto">
        <div class="container">
            <h1>Fotoğraf Ekle</h1>
            <form action="/admin/photos" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Fotoğraf Başlığı:</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="form-group">
                    <label for="description">Açıklama:</label>
                    <textarea id="description" name="description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="photo">Fotoğraf Seç:</label>
                    <input type="file" id="photo" name="photo" accept="image/*" required>
                </div>
                <button type="submit">Fotoğrafı Ekle</button>
            </form>
        </div>
    </section>

    <%- include('partials/footer') %>